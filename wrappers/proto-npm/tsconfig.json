{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": [],
    "skipLibCheck": true, // avoid issues with google-protobuf types
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ]
}
